Library ieee;
use ieee.std_logic_1164.all;

entity InstructRegister is
port(
  pcOld : in std_logic_vector(7 downto 0);
  clk: in std_logic;
  pcNew : out std_logic_vector(7 downto 0)
);
end InstructRegister;

architecture arch of InstructRegister is
begin 
 process(clk)
 begin
	if(rising_edge(clk)) then
	 pcNew<= pcOld;
	end if;
 end process;
end arch;